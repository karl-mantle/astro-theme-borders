---
import Layout from '~/layouts/Layout.astro';
import RecentEntries from '~/components/sections/RecentEntries.astro';
import RelatedEntries from '~/components/sections/RelatedEntries.astro';
---

<Layout
  title="Enter the page title here"
  metaDesc="A fast, accessible, SEO-friendly and easy-to-use starter theme for building static sites with Astro."
>
  <RecentEntries
    backgroundColor="white"
    class="py-12"
    contentCollection="posts"
    headingOptions={{
      headingTag: 'h2'
    }}
    layoutOptions={{
      columns: 3
    }}
  />

  <RecentEntries
    backgroundColor="dark-grey"
    description="Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate."
    class="py-12"
    contentCollection="posts"
    heading="Lorem ipsum dolor sit amet consectetur adipiscing elit"
    headingOptions={{
      headingTag: 'h2'
    }}
    layoutOptions={{
      columns: 2
    }}
    maxEntries={2}
  />

  <RecentEntries
    backgroundColor="light-grey"
    bodyColor="white"
    class="py-12"
    contentCollection="posts"
    heading="Lorem ipsum dolor sit amet"
    headingOptions={{
      headingTag: 'h2'
    }}
    layoutOptions={{
      columns: 3
    }}
  />

  <RelatedEntries
    backgroundColor="white"
    category="Nature"
    class="py-12"
    contentCollection="posts"
    headingOptions={{
      headingTag: 'h2'
    }}
    layoutOptions={{
      columns: 3
    }}
  />

  <RelatedEntries
    backgroundColor="light-grey"
    bodyColor="white"
    category="Architecture"
    class="py-12"
    contentCollection="posts"
    headingOptions={{
      headingTag: 'h2'
    }}
    layoutOptions={{
      columns: 2
    }}
    maxEntries={2}
  />

  <RelatedEntries
    backgroundColor="dark-grey"
    bodyColor="light-grey"
    category="Nature"
    class="py-12"
    contentCollection="posts"
    description="Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate."
    headingOptions={{
      headingTag: 'h2'
    }}
    layoutOptions={{
      columns: 3
    }}
  />

</Layout>
