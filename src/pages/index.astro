---
import Layout from '~/layouts/Layout.astro';
import Image1 from '~/content/custom/images/blog-placeholder-1.jpg';
import ImageBanner from '~/components/sections/ImageBanner.astro';
import CtaBanner from '~/components/sections/CtaBanner.astro';
import RecentEntries from '~/components/sections/RecentEntries.astro';
---

<Layout
  title="Astro Base Starter Theme"
  metaDesc="A fast, accessible, SEO-friendly and easy-to-use starter theme for building static sites with Astro."
>

  <ImageBanner
    backgroundColor="transparent"
    bodyColor="transparent"
    buttonPrimary={{
      buttonStyle: 'primary',
      buttonText: 'View the repo',
      buttonTextClass: '',
      buttonTextWrap: false,
      icon: 'carbon:logo-github',
      iconAnimate: false,
      iconReverse: true,
      iconSize: 21,
      ariaLabel: '',
      class: '',
      href: 'https://github.com/karl-mantle/astro-theme-borders'
    }}
    buttonSecondary={{
      buttonStyle: 'secondary',
      buttonText: 'Learn more',
      buttonTextClass: '',
      buttonTextWrap: false,
      icon: 'carbon:arrow-right',
      iconAnimate: true,
      iconReverse: false,
      iconSize: 21,
      ariaLabel: '',
      class: '',
      href: `${Astro.site}about/`
    }}
    class="py-12"
    heading="Lorem ipsum dolor sit amet consectetur adipiscing elit"
    headingOptions={{
        headingTag: 'h1',
        subtitle: 'Subtitle example'
    }}
    description="Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate."
    image={Image1}
    imageOptions={{
      altText: '',
      aspectRatio: 'square',
      imageMask: 'hexagon',
      objectFit: 'cover',
      padded: true
    }}
    layoutOptions={{
      padded: true,
      reverseColumns: true,
    }}
  />

  <CtaBanner
    backgroundColor="transparent"
    bodyColor="light-grey"
    buttonPrimary={{
      buttonStyle: 'primary',
      buttonText: 'View the repo',
      buttonTextClass: '',
      buttonTextWrap: false,
      icon: 'carbon:logo-github',
      iconAnimate: false,
      iconReverse: true,
      iconSize: 21,
      ariaLabel: '',
      class: '',
      href: 'https://github.com/karl-mantle/astro-theme-borders'
    }}
    buttonSecondary={{
      buttonStyle: 'secondary',
      buttonText: 'Learn more',
      buttonTextClass: '',
      buttonTextWrap: false,
      icon: 'carbon:arrow-right',
      iconAnimate: true,
      iconReverse: false,
      iconSize: 21,
      ariaLabel: '',
      class: '',
      href: `${Astro.site}about/`
    }}
    class="py-6"
    heading="Lorem ipsum dolor sit amet consectetur adipiscing elit"
    headingOptions={{
        headingTag: 'h2',
        subtitle: 'Subtitle example'
    }}
    description="Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate."
    layoutOptions={{
      padded: true
    }}
  />

  <RecentEntries
    backgroundColor="white"
    bodyColor="transparent"
    class="py-12"
    contentCollection="posts"
    description="Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate."
    heading="Recent Posts"
    headingOptions={{
      headingTag: 'h2'
    }}
    layoutOptions={{
      columns: 3
    }}
    maxEntries={3}
  />

</Layout>
