---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/sections/Banner.astro';
import Container from '../components/sections/Container.astro';
import HeroImage from '../content/custom/images/blog-placeholder-1.jpg';
import Image from '../components/ui/Image.astro';
import RecentEntries from '../components/sections/RecentEntries.astro';
import RelatedEntries from '../components/sections/RelatedEntries.astro';
---

<Layout
  title="Homepage"
  metaDesc="Welcome to the homepage!"
>

  <Banner
    class="mb-8"
    title="Astro Basic Theme"
    titleTag="h1"
    description="Morbi tristique senectus et netus. Id semper risus in hendrerit gravida rutrum quisque non tellus. Habitasse platea dictumst quisque sagittis purus sit amet."
    image={HeroImage}
    alt=""
    primaryButtonProps={{ buttonStyle: 'primary', href: '/deadlink', text: 'View the repo', textClass: '', icon: 'tabler:brand-github', iconSize: 21, iconReverse: true, iconRotate: false }}
    secondaryButtonProps={{ buttonStyle: 'link', href: '/deadlink', text: 'Read more', textClass: '', icon: 'tabler:arrow-right', iconSize: 21, iconReverse: false, iconRotate: true }}
    aspectRatio="landscape"
  />

  <Container
    columns={3}
    title="Image cards test"
    description="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
    primaryButtonProps={{ buttonStyle: 'primary', href: '/deadlink', text: 'View the repo', textClass: '', icon: 'tabler:brand-github', iconSize: 21, iconReverse: true, iconRotate: false }}
    secondaryButtonProps={{ buttonStyle: 'link', href: '/deadlink', text: 'Read more', textClass: '', icon: 'tabler:arrow-right', iconSize: 21, iconReverse: false, iconRotate: true }}
  >
    <Image image={HeroImage} containImage={true} aspectRatio="portrait"/>
    <Image image={HeroImage} containImage={true} aspectRatio="square"/>
    <Image image={HeroImage} containImage={true} aspectRatio="landscape"/>
  </Container>

  <RecentEntries
    columns={3}
    contentCollection="posts"
  />

  <RelatedEntries
    columns={3}
    contentCollection="posts"
    category="Nature"
    title="Posts categorised as 'Nature'"
    description="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
    primaryButtonProps={{ buttonStyle: 'primary', href: '/deadlink', text: 'View the repo', textClass: '', icon: 'tabler:brand-github', iconSize: 21, iconReverse: true, iconRotate: false }}
    secondaryButtonProps={{ buttonStyle: 'link', href: '/deadlink', text: 'Read more', textClass: '', icon: 'tabler:arrow-right', iconSize: 21, iconReverse: false, iconRotate: true }}
  />

  <RecentEntries
  columns={3}
  contentCollection="custom"
/>


</Layout>
