---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/sections/Banner.astro';
import HeroImage from '../content/blog/images/blog-placeholder-1.jpg';
import Container from '../components/sections/Container.astro';
import Image from '../components/ui/Image.astro';
---

<Layout
  title="Homepage"
  metaDesc="Welcome to the homepage!"
>

  <Banner
    title="Lorem ipsum sic dolurum est, magnifica ulum delit"
    titleTag="h1"
    description="Morbi tristique senectus et netus. Id semper risus in hendrerit gravida rutrum quisque non tellus. Habitasse platea dictumst quisque sagittis purus sit amet."
    image={HeroImage}
    alt=""
    primaryButtonProps={{ buttonStyle: 'primary', href: '/deadlink', text: 'View the repo', textClass: '', icon: 'iconoir:github', iconSize: 21, iconReverse: true, iconRotate: false }}
    secondaryButtonProps={{ buttonStyle: 'link', href: '/deadlink', text: 'Read more', textClass: '', icon: 'iconoir:arrow-right', iconSize: 21, iconReverse: false, iconRotate: true }}
  />

  <Container columns={3} title="lorem ipsum title" description="this is a description blah blah blah"
  primaryButtonProps={{ buttonStyle: 'primary', href: '/deadlink', text: 'View the repo', textClass: '', icon: 'iconoir:github', iconSize: 21, iconReverse: true, iconRotate: false }}
  secondaryButtonProps={{ buttonStyle: 'link', href: '/deadlink', text: 'Read more', textClass: '', icon: 'iconoir:arrow-right', iconSize: 21, iconReverse: false, iconRotate: true }}

  >
<Image image={HeroImage} contained={true} aspectRatio="portrait"/>
<Image image={HeroImage} contained={true} aspectRatio="square"/>
<Image image={HeroImage} contained={true} aspectRatio="square"/>
</Container>
</Layout>
