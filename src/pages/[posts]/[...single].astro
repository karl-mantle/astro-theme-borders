---
import { type CollectionEntry, getEntry, render } from 'astro:content';
import { PERMALINK_POSTS_CATEGORY, PERMALINK_POSTS_SINGLE, PERMALINK_POSTS_TAG } from '../../consts';
import { slugify, getEntries } from '../../utils';
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/ui/Button.astro';
import Date from '../../components/ui/Date.astro';
import Title from '../../components/ui/Title.astro';
import Banner from '../../components/sections/Banner.astro';
import Profile from '../../components/partials/Profile.astro';
import TagList from '../../components/partials/TagList.astro';

type Props = { 
  entry: CollectionEntry<'posts'>,
  prevEntry: CollectionEntry<'posts'>,
  nextEntry: CollectionEntry<'posts'>
};

export async function getStaticPaths() {
    const entries = await getEntries('posts');
    const entryCount = entries.length;
    return entries.map((entry, index) => ({
        params: { posts: PERMALINK_POSTS_SINGLE, single: entry.data.slug },
        props: {
            entry,
            prevEntry: index + 1 < entryCount ? entries[index + 1] : null,
            nextEntry: index > 0 ? entries[index - 1] : null
        }
    }));
}

const { entry, prevEntry, nextEntry } = Astro.props;
const { Content } = await render(entry);
const { data: authorData } = await getEntry('people', entry.data.author.id);
---

<Layout title={entry.data.seo?.title || entry.data.title} metaDesc={entry.data.seo?.description || entry.data.description}>
  <div class="prose dark:prose-invert prose-theme max-w-max">
    <header>
      <Banner
        title={entry.data.title}
        titleTag="h1"
        description={entry.data.description}
        image={entry.data.image?.src}
        alt={entry.data.image?.alt}
        aspectRatio="landscape"
        class="not-prose"
      />
    </header>

    <div class="flex flex-col md:flex-row gap-12 md:gap-24 md:mb-8">
      <article class="md:py-8">
        <Content />
      </article>

      <aside class="not-prose flex flex-col flex-shrink-0 gap-4 md:w-72 md:py-8">
        <div class="relative flex flex-col">
          <Title titleTag="h2" class="md:text-xl mb-2">About this post</Title>
          <div class="absolute bottom-0 -z-40 block w-full border-b-2 border-theme-300 dark:border-theme-700" aria-hidden="true"></div>
        </div>

        { entry.data.author.id !== 'default' && (
          <Title titleTag="h3" class="md:text-lg">Author</Title>
          <Profile
            title={authorData.title}
            description={authorData.description}
            image={authorData.image}
          />
        )}

        <Title titleTag="h3" class="md:text-lg -mb-2">Tags</Title>
        <TagList tags={entry.data.tags} permalink={`${PERMALINK_POSTS_TAG}`} />

        <Title titleTag="h3" class="sr-only">Post Details</Title>
        <div class="-mb-2">
          Posted in the
            <a
              class="pb-2 font-medium border-b-2 border-transparent hover:border-theme-700 hover:dark:border-theme-300 transition ease-in-out duration-300"
              href={`${Astro.site}${PERMALINK_POSTS_CATEGORY}${slugify(entry.data.category)}/`}>
                {entry.data.category}
            </a> 
          category
        </div>

        <div class="flex flex-col text-sm gap-1">
          <h4 class="font-medium">Published on</h4>
          <Date class="text-sm" date={entry.data.pubDate} description="post first published on" />
        </div>
        { entry.data.updatedDate &&  (
          <div class="flex flex-col text-sm gap-1">
            <h4 class="font-medium">Last updated</h4>
            <Date class="text-sm" date={entry.data.updatedDate} description="post last updated on"/>
          </div>
        )}

        <div class="flex justify-between">
          { nextEntry && (
            <Button buttonStyle="link" href={`${Astro.site}${PERMALINK_POSTS_SINGLE}${nextEntry.data.slug}/`} text="Next post" icon="tabler:arrow-left" iconSize={21} iconReverse={true} class="w-fit text-sm" />
          )}
          { prevEntry &&  (
            <Button buttonStyle="link" href={`${Astro.site}${PERMALINK_POSTS_SINGLE}${prevEntry.data.slug}/`} text="Previous post" icon="tabler:arrow-right" iconSize={21} iconReverse={false} class="w-fit text-sm" />
          )}
        </div>

        <div class="relative flex flex-col mb-2">
          <Title titleTag="h2" class="md:text-xl mb-2">Recent Posts</Title>
          <div class="absolute bottom-0 -z-40 block w-full border-b-2 border-theme-300 dark:border-theme-700" aria-hidden="true"></div>
        </div>
      </aside>
    </div>
  </article>
</Layout>
