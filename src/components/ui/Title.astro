---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'h1'> {
  titleTag: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'p' | 'div' | 'span'
};

const { titleTag, class: className }: Partial<Props> = Astro.props;
---

{ titleTag === 'h1' && (
  <h1 class:list={['text-3xl md:text-4xl font-semibold text-theme-800 dark:text-theme-200', className]}><slot /></h1>
)}
{ titleTag === 'h2' && (
  <h2 class:list={['text-2xl md:text-3xl font-semibold text-theme-800 dark:text-theme-200', className]}><slot /></h2>
)}
{ titleTag === 'h3' && (
  <h3 class:list={['text-xl md:text-2xl font-semibold text-theme-800 dark:text-theme-200', className]}><slot /></h3>
)}
{ titleTag === 'h4' && (
  <h4 class:list={['text-lg md:text-xl font-semibold text-theme-800 dark:text-theme-200', className]}><slot /></h4>
)}
{ titleTag === 'h5' && (
  <h5 class:list={['text-base font-semibold text-theme-800 dark:text-theme-200', className]}><slot /></h5>
)}
{ titleTag === 'p' && (
  <p class:list={['text-base text-theme-800 dark:text-theme-200', className]}><slot /></p>
)}
{ titleTag === 'div' && (
  <div class:list={['text-base text-theme-800 dark:text-theme-200', className]}><slot /></div>
)}
{ titleTag === 'span' && (
  <span class:list={['text-base text-theme-800 dark:text-theme-200', className]}><slot /></span>
)}