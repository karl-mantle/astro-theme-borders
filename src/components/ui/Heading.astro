---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'h1'> {
  titleTag?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p' | 'div' | 'span'
};

const { titleTag, class: className, ...rest }: Partial<Props> = Astro.props;

let HeadingTag;
let headingCSS;
switch (titleTag) {
  case 'h1':
    HeadingTag = 'h1';
    headingCSS = 'text-3xl md:text-4xl font-semibold';
    break;
  case 'h2':
    HeadingTag = 'h2';
    headingCSS = 'text-2xl md:text-3xl font-semibold';
    break;
  case 'h3':
    HeadingTag = 'h3';
    headingCSS = 'text-xl md:text-2xl font-semibold';
    break;
  case 'h4':
    HeadingTag = 'h4';
    headingCSS = 'text-lg md:text-xl font-medium';
    break;
  case 'h5':
    HeadingTag = 'h5';
    headingCSS = 'text-base font-medium';
    break;
  case 'h6':
    HeadingTag = 'h6';
    headingCSS = 'text-base font-medium';
    break;
  case 'p':
    HeadingTag = 'p';
    headingCSS = 'text-base';
    break;
  case 'span':
    HeadingTag = 'span';
    headingCSS = 'text-base font-medium';
    break;
  default:
    HeadingTag = 'div';
    headingCSS = 'text-base';
    break;
};
---

<HeadingTag class:list={[headingCSS, className]} {...rest} >
  <slot />
</HeadingTag>
