---
import type { ComponentProps } from '../../types';
import Title from '../ui/Title.astro';
import Button from '../ui/Button.astro';

interface Props extends ComponentProps {
  titleTag: 'h1' | 'h2' | 'h3' | 'h4' | 'h5'
};

const { title, titleTag = 'h2', description, primaryButtonProps, secondaryButtonProps, class: className }: Partial<Props> = Astro.props;
---
<header class:list={['flex flex-col sm:flex-row justify-between', className]}>

  { (title || description) && (
    <div class="flex flex-col gap-2">
      { title && (
        <Title titleTag={titleTag}>{title}</Title>
      )}
      { description && (
        <p class="text-theme-800 dark:text-theme-200 mb-2">{description}</p>
      )}
    </div>
  )}

  { (primaryButtonProps || secondaryButtonProps) && (
    <div class="flex flex-col lg:flex-row gap-4 my-auto">
      { primaryButtonProps && (
        <Button {...primaryButtonProps} />
      )}
      { secondaryButtonProps && (
        <Button {...secondaryButtonProps} />
      )}
    </div>
  )}

</header>
