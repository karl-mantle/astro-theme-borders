---
import { Image } from 'astro:assets';
import { THEME_CONTAINER_DESKTOP } from '~/consts';
import SiteLogo from '~/assets/logo/svg/Logo-1-1.svg';
import SiteNavigation from '~/components/partials/SiteNavigation.astro';
import Toolbar from '~/components/partials/Toolbar.astro';
---

<header class={`relative min-h-20 flex justify-end md:justify-between pl-2 pt-2 md:pl-4 md:pt-4 mb-8 ${THEME_CONTAINER_DESKTOP}`}>
  <div class="absolute md:relative left-2 top-2 mb-2 md:mb-4 md:left-auto md:top-auto max-w-16 md:max-w-24">
    <a href="/" aria-label="to homepage">
      <Image class="aspect-square object-cover" src={SiteLogo} alt="" format="svg" />
    </a>
  </div>
  <div class="flex flex-col justify-between" x-data="{ siteNavigationOpen: false }">
    <Toolbar />
    <SiteNavigation />
  </div>
</header>
