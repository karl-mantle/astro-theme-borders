---
import type { PartialProps } from '../../types';
import Button from '../ui/Button.astro';
import Title from '../ui/Title.astro';

const { title, titleTag = 'h2', description, primaryButtonProps, secondaryButtonProps, class: className, ...rest }: Partial<PartialProps> = Astro.props;
---

<header class:list={['flex flex-col md:flex-row justify-between', className]} {...rest} >

  { (title || description) && (
    <div class="flex flex-col gap-2">
      { title && (
        <Title titleTag={titleTag}>{title}</Title>
      )}
      { description && (
        <p class="text-black dark:text-white mb-2">{description}</p>
      )}
    </div>
  )}

  { (primaryButtonProps || secondaryButtonProps) && (
    <div class="flex flex-col lg:flex-row gap-4 my-auto">
      { primaryButtonProps && (
        <Button {...primaryButtonProps} />
      )}
      { secondaryButtonProps && (
        <Button {...secondaryButtonProps} />
      )}
    </div>
  )}

</header>
