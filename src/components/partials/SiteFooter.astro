---
import { SITE_FOOTER_TEXT, THEME_CONTAINER_DESKTOP, THEME_CONTAINER_MOBILE } from '~/consts';
import { socialLinks } from '~/data/social';
import { Image } from 'astro:assets';
import FooterNavigation from '~/components/partials/FooterNavigation.astro';
import SocialLinks from '~/components/partials/SocialLinks.astro';
import Heading from '../ui/Heading.astro';
import Text from '../ui/Text.astro';
import SiteLogo from '~/assets/logo/svg/Logo-1-1.svg';
---

<footer class:list={['flex flex-col justify-between bg-light-grey dark:bg-dark-grey', THEME_CONTAINER_DESKTOP, THEME_CONTAINER_MOBILE]}>

  <div class="flex justify-between py-8 md:p-8">

    <div class="flex flex-col md:flex-row gap-8 items-center">
      <a href={Astro.site} aria-label="Go to the home page" class="self-start md:self-center">
        <Image class="aspect-square object-contain" src={SiteLogo} alt="" format="svg" class="w-24"/>
      </a>
      <div class="flex flex-col gap-4 md:gap-2">
        <Heading backgroundColor="light-grey" class="text-lg font-semibold">Astro Base</Heading>
        <Text backgroundColor="light-grey" class="text-sm max-w-[30ch]">Duis aute irure dolor in reprehenderit in voluptate.</Text>
      </div>
    </div>

    <FooterNavigation />

  </div>

  <div class="relative flex flex-col md:flex-row items-center md:justify-between w-full gap-2 p-4">
    <div class="absolute top-0 w-full md:w-[calc((100%-2rem))] border-b-2 border-white dark:border-black" aria-hidden="true"></div>

    <Text backgroundColor="light-grey" class="text-sm pl-4">
      {SITE_FOOTER_TEXT}
    </Text>

    <SocialLinks
      backgroundColor="light-grey"
      class="md:pr-4"
      socialLinks={socialLinks}
    />
  </div>

</footer>
