---
import { Image } from 'astro:assets';
import Navigation from './Navigation.astro';
import TopLinks from './TopLinks.astro';
import SiteLogo from '../../assets/logo/svg/Logo-1-1.svg';
---

<header class="relative flex justify-end min-h-20 md:justify-between pl-2 pt-2 md:pl-4 md:pt-4 mb-8">
  <div class="absolute left-2 top-2 mb-2 md:mb-4 md:left-auto md:top-auto md:relative max-w-16 md:max-w-24">
    <a href="/" aria-label="to homepage">
      <Image class="aspect-square object-cover" src={SiteLogo} alt="" format="svg" />
    </a>
  </div>
  <div class="flex flex-col justify-between" x-data="{ siteNavigationOpen: false }">
    <TopLinks />
    <Navigation />
  </div>
</header>
